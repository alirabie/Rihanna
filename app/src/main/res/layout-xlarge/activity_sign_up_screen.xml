<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpScreen"
    android:background="@drawable/login_bg">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
        <android.support.v7.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/home_btn_sign_up"
                    android:src="@drawable/homeicon"
                    android:padding="5dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view">>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:id="@+id/customerlocation_input_data_box"
                android:layout_below="@+id/linearLayout31"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputemail"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView5"
                        android:layout_weight="6" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/signup_email_input"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:gravity="center|start"
                        android:textAlignment="viewStart"
                        android:hint="@string/emailhintinputlogin"
                        android:layout_weight="1"
                        android:textSize="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputpassword"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView3"
                        android:layout_weight="6" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/signup_password_input"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:hint="@string/passwordhintinputlogin"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:inputType="textPassword"
                        android:gravity="center|start"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputpassword"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView2"
                        android:layout_weight="6" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/signup_re_password"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:gravity="center|start"
                        android:hint="@string/repasswordhintinputlogin"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:inputType="textPassword"
                        android:textAlignment="viewStart" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputusername"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView86"
                        android:layout_weight="6"
                        android:layout_gravity="left" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/fname_input_reg"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:hint="@string/userhintinputlogin"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:textSize="25dp"
                        android:gravity="center|start"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputusername"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView6"
                        android:layout_weight="6"
                        android:layout_gravity="left" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/lname_input_reg"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:gravity="center|start|right"
                        android:textAlignment="viewStart"
                        android:hint="@string/lastname"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/inputmobile"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView4"
                        android:layout_weight="6" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/phone_input_reg"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:gravity="center|start"
                        android:textAlignment="viewStart"
                        android:hint="@string/phonehintinputlogin"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dropdwonlistbg"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp">
                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/signup_states_spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:textSize="20dp"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dropdwonlistbg"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp">
                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/signup_districts_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/addressinput"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView43"
                        android:layout_weight="6" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/address_input_reg"
                        android:background="#00ffffff"
                        android:padding="6dp"
                        android:gravity="center|start"
                        android:textAlignment="viewStart"
                        android:hint="@string/address"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:inputType="text" />
                </LinearLayout>
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="@string/resumeregisterregister"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:typeface="serif"
                    android:id="@+id/resume_reg_btn">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout31">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/welvcome"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="serif"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/registernew"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customerlocation_input_data_box"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1.5"></LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/orrigsretfrom"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayout2"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/twitter_reg_btn"
                    android:src="@drawable/twiiter"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/facebook_reg_btn"
                    android:src="@drawable/facebook"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gmail_reg_btn"
                    android:src="@drawable/gmail"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
