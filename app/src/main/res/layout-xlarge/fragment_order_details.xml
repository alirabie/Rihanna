<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experts.rihanna.appsmatic.com.rihannaexperts.Activities.OrderInfo"
    android:background="#eaeaea">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="#eaeaea"
        android:id="@+id/linearLayout10">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView7"
            android:src="@drawable/ordersicon"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/order_info_num_and_category"
            android:textSize="22dp"
            android:padding="2dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout10"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:id="@+id/linearLayout14"
        android:layout_above="@+id/linearLayout15">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/linearLayout12"
            android:layout_below="@+id/linearLayout10"
            android:layout_alignParentEnd="true"
            android:background="#ffffff">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:src="@drawable/ordersicon"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/listorders"
                android:id="@+id/textView10"
                android:textSize="22dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout12"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/order_info_order_list"></android.support.v7.widget.RecyclerView>

        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/outdoor_flag"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:src="@drawable/arrw_icon"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/servicetypeflag"
                android:textSize="22dp"
                android:padding="3dp"
                android:textColor="#000000"
                android:gravity="center"
                android:text="@string/notset" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/linearLayout15"
        android:layout_above="@+id/customer_info_pannel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/linearLayout13"
            android:background="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout14">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/totalprice"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/paymentstatus"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/colorPrimary"
                android:textIsSelectable="false" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pay"
            android:id="@+id/finishorder_btn"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_below="@+id/linearLayout6"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/orderconfirmed_flag"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/orderaccepted"
                android:id="@+id/textView6"
                android:background="#eaeaea"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="30dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/rate_expert_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView13"
                android:background="#eaeaea"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="30dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/rate" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/customer_info_pannel"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/frameLayout"
        android:layout_marginTop="10dp"
        android:padding="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/linearLayout11"
            android:background="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout14" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                android:src="@drawable/calandericon"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/customerinfo"
                android:id="@+id/textView9"
                android:textSize="22dp"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="سارة محمد على"
                android:id="@+id/order_info_cust_name"
                android:textSize="22dp"
                android:textColor="#000000"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/order_info_cust_phone"
                android:textSize="22dp"
                android:padding="2dp"
                android:text="01003527944" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/order_info_cust_address"
                android:textSize="22dp"
                android:padding="2dp"
                android:text="شارع التحرير الدقى" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/state_tv"
                android:textSize="22dp"
                android:padding="2dp"
                android:text="القاهرة" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>