<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="#eaeaea">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_margin="3dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout28">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/certificatename"
                        android:id="@+id/textView27"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="any bbb"
                        android:id="@+id/cert_name_tv"
                        android:padding="3dp"
                        android:textSize="25dp"
                        android:textColor="#525252" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/spicialty"
                        android:id="@+id/textView29"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="any bbb"
                        android:id="@+id/cert_sicilaty_tv"
                        android:padding="3dp"
                        android:textSize="25dp"
                        android:textColor="#525252" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/grantor"
                        android:id="@+id/textView31"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="any bbb"
                        android:id="@+id/cert_granter_tv"
                        android:padding="3dp"
                        android:textSize="25dp"
                        android:textColor="#525252" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView33"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp"
                        android:text="@string/certyesr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="any bbb"
                        android:id="@+id/cert_year_tv"
                        android:padding="3dp"
                        android:textSize="25dp"
                        android:textColor="#525252" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/edit_cert_btn"
        android:src="@drawable/certico"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>